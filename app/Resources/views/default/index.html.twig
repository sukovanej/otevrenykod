{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid main-container">
        <div class="row">
            <div class="col-xl-8">
                {% for published in published_list %}
                    <div class="card">
                        <div class="row">
                            <div class="col-xl-3 col-lg-12">
                                <div class="card-article-img">
                                    <a href="{{ path('content', { url: published.url }) }}">
                                        <img src="{{ asset('img/article/') }}{{ published.content.image }}"/>
                                    </a>
                                </div>
                            </div>
                            <div class="col-xl-9 col-lg-12">
                                <div class="card-body card-body-article">
                                    <h4 class="card-title">{{ published.content.title }}
                                        <a href="{{ path('content', { url: published.url }) }}"
                                           class="pull-right btn btn-sm continue-button btn-primary">
                                            {{ "general.continue_reading"|trans }}</a>
                                    </h4>
                                    <p class="card-text">{{ published.content.perex }}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
{% endblock %}
