<div class="card">
    <div class="row">
        <div class="col-xl-3 col-lg-3 col-md-4 col-xs-12">
            <div class="card-article-img">
                <a href="{{ path('content', { url: published.url }) }}">
                    <img src="{{ asset('img/article/') }}{{ published.content.image }}"/>
                </a>
            </div>
        </div>
        <div class="col-xl-9 col-lg-9 col-md-8 col-xs-12">
            <div class="card-body card-body-article">
                <h4 class="card-title">
                    <span class="btn btn-success btn-sm">
                        {{ "content_type.0"|trans }}
                    </span>

                    <a href="{{ path('content', { url: published.url }) }}" class="article-title-hyperlink">
                        {{ published.content.title }}
                    </a>
                </h4>

                <p class="card-text">{{ published.content.perex }}</p>

                <div>
                    <a href="{{ path('user_view', { username: published.content.author.username }) }}"
                       class="btn btn-sm btn-secondary">
                        <img src="{{ asset('svg/person.svg') }}" class="white-img" />
                        {{ published.content.author.username }}
                    </a>

                    {% if published.content.category is not null %}
                        <a href="{{ path('category', { category_name: published.content.category.url }) }}"
                           class="btn btn-sm btn-primary">
                            <img src="{{ asset('svg/tag.svg') }}" class="white-img" />
                            {{ published.content.category.name }}</a>
                    {% endif %}

                    <a href="{{ path('content_comments', { url: published.url }) }}"
                       class="btn btn-sm btn-success">
                        <img src="{{ asset('svg/comment-discussion.svg') }}" class="white-img" />
                        {{ "general.comments"|trans }} ({{ published.content.countComments }})</a>
                </div>
            </div>
        </div>
    </div>
</div>